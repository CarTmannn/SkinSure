<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.skinsure">

    <!-- Izinkan aplikasi untuk mengakses internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Izinkan aplikasi untuk memeriksa status jaringan -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Izinkan aplikasi untuk menggunakan kamera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Menyatakan bahwa aplikasi membutuhkan fitur kamera -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <!-- Izinkan akses ke penyimpanan eksternal -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="34" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SkinSure"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SkinSure">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
